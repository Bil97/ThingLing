<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ThingLing.Controls.InternalControls.ContentControl">
  <DockPanel>
    <StackPanel x:Name="BottomHeader" Orientation="Horizontal" DockPanel.Dock="Bottom" />
    <StackPanel x:Name="LeftHeader" Orientation="Vertical" DockPanel.Dock="Left" />
    <StackPanel x:Name="RightHeader" Orientation="Vertical" DockPanel.Dock="Right" />
    <Grid x:Name="ContentPanel" />
  </DockPanel>
</UserControl>
