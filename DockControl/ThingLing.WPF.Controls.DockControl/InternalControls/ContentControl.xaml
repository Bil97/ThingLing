<UserControl x:Class="ThingLing.Controls.InternalControls.ContentControl"
             x:ClassModifier="internal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ThingLing.Controls.InternalControls" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <StackPanel x:Name="BottomHeader" Orientation="Horizontal" DockPanel.Dock="Bottom" />
        <StackPanel x:Name="LeftHeader" Orientation="Vertical" DockPanel.Dock="Left" />
        <StackPanel x:Name="RightHeader" Orientation="Vertical" DockPanel.Dock="Right" />
        <Grid x:Name="ContentPanel" />
    </DockPanel>
</UserControl>
