<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <Nullable>enable</Nullable>
    <Title>ThingLing.Controls.MessageBox</Title>
    <Authors>Bil Ly</Authors>
    <Description>Displays a message box. It is a normal Avalonia window customized to be used as a simple dialog to accept Yes, No, Ok, Cancel and None responses from the user.</Description>
    <Copyright>Copyright Â© 2021</Copyright>
    <PackageProjectUrl>https://github.com/Bil97/MessageBox</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Bil97/MessageBox</RepositoryUrl>
    <PackageLicenseUrl></PackageLicenseUrl>
    <RootNamespace>ThingLing.Controls</RootNamespace>
    <Company>ThingLing</Company>
    <AssemblyVersion>1.0.0</AssemblyVersion>
    <FileVersion>1.0.0</FileVersion>
    <PackageLicenseFile>LICENSE.TXT</PackageLicenseFile>
    <AssemblyName>ThingLing.Controls.MessageBox</AssemblyName>
    <PackageId>ThingLing.Avalonia.Controls.MessageBox</PackageId>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Avalonia.Desktop" Version="0.10.6" />
   </ItemGroup>
  <ItemGroup>
    <AvaloniaResource Include="Images\*" />
  </ItemGroup>
  <ItemGroup>
    <None Include="..\..\LICENSE.TXT">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>
</Project>
