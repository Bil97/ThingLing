<UserControl x:Class=" ThingLing.Controls.TabItemBody"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ThingLing.Controls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel>
        <local:TabItemHeader x:Name="TabItemHeader" x:FieldModifier="public"
                             DockPanel.Dock="Top" Margin="0"/>
        <Decorator x:Name="ContentPanel" x:FieldModifier="public"/>
    </DockPanel>
</UserControl>